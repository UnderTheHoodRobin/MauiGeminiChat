<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiGeminiChat.MainPage"
    Title="Gemini Sample">

    <VerticalStackLayout Padding="20" Spacing="18">

        <Label Text="Gemini API Demo"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Entry x:Name="PromptEntry"
               Placeholder="Type a prompt..."
               Keyboard="Chat" />

        <Button x:Name="SendButton"
                Text="Send"
                Clicked="OnSendClicked" />

        <Label Text="Response:"
               FontAttributes="Bold"
               Margin="0,20,0,0" />

        <ScrollView>
            <Label x:Name="ResponseLabel"
                   LineBreakMode="WordWrap" />
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>
